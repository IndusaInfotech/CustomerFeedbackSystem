@model Application.Request.SurveyInfo;


@{
    ViewData["Title"] = "AddServey";
}


<div class="row mb-2">
    <!--<div class="col-sm-6">
                <h1>SURVEYS</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">SURVEYS</li>
                </ol>
            </div>-->
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8 offset-md-2">
                <!-- general form elements -->
                <div class="card ">
                    <div class="card-header bg-light">
                        <h3 class="card-title">NEW SURVEY</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @*<form>*@
                    @using (Html.BeginForm("AddSurvey", "Survey", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        <div class="card-body">
                            @Html.HiddenFor(x=>x.Id)
                            <div class="form-group">
                                @Html.LabelFor(x => x.Name,new { @class = "form-label"})
                              
                                @*<input type="text" name="" class="form-control" id="exampleInputName" placeholder="Enter Name">*@

                                @Html.EditorFor( x=> x.Name, new {htmlAttributes = new{@class = "form-control", placeholder = "Enter Name" }})
                              
                              
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Description,new { @class = "form-label"})


                                @*<textarea class="form-control" name="" rows="3" id="exampleInputDescription" placeholder="Enter Description"></textarea>*@
                                @Html.TextAreaFor( x=> x.Description, new { @class = "form-control", placeholder = "Enter Description..." })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Title,new { @class = "form-label"})
                                @*<input type="text" name="" class="form-control" id="exampleInputTitle" placeholder="Enter Title">*@
                                @Html.EditorFor(x=>x.Title, new {htmlAttributes = new{@class = "form-control", placeholder = "Enter Title..." }})
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x=>x.NumberOfPage,"Page Number",new { @class = "form-label"})
                                @*<input type="text" class="form-control" id="exampleInputNoOfPage" placeholder="Enter Page">*@
                                @Html.EditorFor(x=>x.NumberOfPage, new {htmlAttributes = new{@class = "form-control", placeholder = "Enter Page Number" }})
                            </div>
                            <div class="form-group">
                          @*  <input type="file" name="userfile" class="form-control">*@

                                @Html.TextBoxFor(x => x.Image, new { type = "file", @class = "form-control" })
                            </div>
                            <div class="form-check">
                                @*<input type="checkbox" class="form-check-input" id="exampleCheck1">*@
                                @Html.CheckBoxFor(x=>x.IsActive, new { @class = "form-check-input" })
                                @Html.LabelFor(x => x.IsActive,new { @class = "form-check-label"})
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        }
                    @*</form>*@
                </div>
            </div>
        </div>
    </div>

</section>

