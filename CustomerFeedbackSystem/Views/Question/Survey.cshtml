<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4>Questions</h4>
                    </div>
                </div>
            </div>
        </div>
        @{
            var i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            @if (@item.AnswerType == 1)
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-white">
                                <h5>@item.Description</h5>
                            </div>
                            <div class="card-body">
                                @foreach (var item1 in item.answerResonpes)
                                {
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" value="">@item1.OpetionText
                                        <br>
                                    </div>
                                 
                                }
                                
                             
                            </div>
                           @if(i<@ViewBag.AnswerData){
                            <div class="card-footer bg-white text-right" >
                                    <button type="button" class="btn btn-primary next">Next</button>
                            </div>
                           }
                       
                        </div>
                    </div>
                </div>
                <ul>

                </ul>
            }
            else if (item.AnswerType == 2)
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card" >
                            <div class="card-header bg-white">
                                <h5>@item.Description</h5>
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="image1">
                                        <img src="~/dist/img/excellent.png" class="img-circle elevation-2 img-fluid" alt="User Image">
                                    </div>
                                    <div class="image1">
                                        <img src="~/dist/img/good.png" class="img-circle elevation-2 img-fluid" alt="User Image">
                                    </div>
                                    <div class="image1">
                                        <img src="~/dist/img/average.png" class="img-circle elevation-2 img-fluid" alt="User Image">
                                    </div>
                                    <div class="image1">
                                        <img src="~/dist/img/poor.png" class="img-circle elevation-2 img-fluid" alt="User Image">
                                    </div>
                                </div>
                            </div>

                           @if (i< @ViewBag.AnswerData)
                            {
                                <div class="card-footer bg-white text-right">
                                    <button type="button" class="btn  btn-primary next">Next</button>
                                </div>
                            }
                         
                        </div>
                    </div>
                </div>
            }
            else if (item.AnswerType == 3)
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card" >
                            <div class="card-header bg-white">
                                <h5>@item.Description</h5>
                            </div>
                            <div class="card-body">
                                <div class="col-sm-8">
                                <input type="text" name="" class="form-control" placeholder="name" />
                                </div>
                            </div>
                          @if (i< @ViewBag.AnswerData)
                            {
                              <div class="card-footer bg-white text-right">
                                    <button type="button" class="btn  btn-primary next">Next</button>
                             </div>
                            }
                        </div>
                      
                    </div>
                </div>
            }
            else if (item.AnswerType == 4)
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-white">
                                <h5>@item.Description</h5>
                            </div>
                            <div class="card-body">
                                <div class="col-sm-8">
                                <input type="text" name="" class="form-control" placeholder="email" />
