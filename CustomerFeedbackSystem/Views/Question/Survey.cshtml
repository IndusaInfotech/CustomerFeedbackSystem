                            </div>
                            <div class="card-body">
                                <div class="col-sm-8">
                                <input type="text" name="" class="form-control" placeholder="mobile" />
                                </div>
                            </div>
                          @if (i< @ViewBag.AnswerData)
                            {
                                <div class="card-footer bg-white text-right">
                                    <button type="button" class="btn btn-primary next">Next</button>
                                </div>
                            }
                        </div>
                       
                    </div>
                </div>
            }
