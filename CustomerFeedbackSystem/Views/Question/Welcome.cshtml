@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Welcome</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <style>
        .btn {
            padding-right: 50px;
            padding-left: 50px;
        }
    </style>

</head>
<body>
    <div class="container-fluid  text-dark  py-4 ">
        <div class="row">
            <div class="col-lg-12  text-center">
                <img src="~/dist/img/wel.jpg" class="img-fluid" width="500" height="30">

                <h3 class="mt-2"style="font-family: League Spartan, Clear Sans;">TO THE SURVEY</h3>
            </div>
        </div>
        @foreach (var item in ViewBag.SurveyData)
        {
          



            <div class="row">
                <div class=" col-lg-12  text-light d-flex justify-content-center mt-3">
@*                  <img src="~/dist/img/welcomepage.jpg" class="rounded-circle rounded img-fluid" width="250" height="350">*@
               <img src="~/images/@item.Images"
                     class="rounded-circle img-fluid"
                     height="230" width="250" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12  text-dark d-flex justify-content-center mt-4" style="font-family: League Spartan, Clear Sans;"> <h4>@item.Title</h4> </div>
                <div class="  text-dark d-flex justify-content-center " style="font-family: League Spartan, Clear Sans;"> <h5>(@item.Description)</h5> </div>
            </div>
            <div class="row">
                <div class="col-lg-12  text-light d-flex justify-content-center mt-4">
                    <a href="/Question/Survey?SurveyId=@item.Id" class="btn btn-primary">START</a>
                </div>
            </div>
            <a href="/Question/ThankYou?SurveyId=@item.Id" class="btn btn-primary">ThankYou</a>
        }
    </div>
</body>
</html>
